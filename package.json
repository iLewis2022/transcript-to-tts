{
  "name": "campaign-tts-processor",
  "version": "0.4.0",
  "description": "Convert D&D campaign scripts to individual character audio files using ElevenLabs TTS. Features intelligent speaker detection, voice mapping with previews, and automated processing pipeline.",
  "main": "main.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "dev:watch": "nodemon backend/server.js --watch backend --ext js,json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting not configured yet\"",
    "setup": "node backend/utils/setup.js",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder"
  },
  "keywords": [
    "tts",
    "text-to-speech",
    "elevenlabs",
    "dnd",
    "dungeons-dragons",
    "campaign",
    "audio",
    "voice-synthesis",
    "rpg",
    "transcript",
    "parsing",
    "speaker-mapping"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/campaign-tts-processor.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/campaign-tts-processor/issues"
  },
  "homepage": "https://github.com/your-username/campaign-tts-processor#readme",
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "archiver": "^6.0.2",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mammoth": "^1.6.0",
    "multer": "^1.4.5-lts.1",
    "textract": "^2.5.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "config": {
    "port": 3000,
    "upload_limit": "10mb"
  },
  "build": {
    "appId": "com.campaigntts.processor",
    "productName": "Campaign TTS Processor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "package.json",
      "!outputs/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Campaign TTS"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Audio"
    }
  },
  "phase_status": {
    "phase_1": "âœ… Complete - File Upload & Basic Processing",
    "phase_2": "âœ… Complete - Script Parsing & Analysis",
    "phase_3": "âœ… Complete - Voice Management & Speaker Mapping",
    "phase_4": "âœ… Complete - Cost Analysis & Warnings",
    "phase_5": "âœ… Complete - TTS Processing Engine",
    "phase_6": "âœ… Complete - File Management & Output",
    "phase_7": "ðŸ“‹ Planned - Advanced Features",
    "phase_8": "ðŸ“‹ Planned - Testing & Deployment"
  }
}